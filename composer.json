{
    "name": "spekulatius/phpscraper",
    "description": "An opinionated way to access the web. See tests/ for examples.",
    "keywords": [
        "PHP scraper",
        "PHP scraping",
        "web scraping",
        "PHP library",
        "web-access"
    ],
    "homepage": "https://phpscraper.de",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Peter Thaleikis",
            "homepage": "https://peterthaleikis.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-intl": "*",
        "donatello-za/rake-php-plus": "^1.0.15",
        "fabpot/goutte": "^4.0",
        "jeremykendall/php-domain-parser": "^6.1.1",
        "symfony/cache": "^6.1",
        "symfony/cache-contracts": "^3.1",
        "symfony/dom-crawler": "^5.4 || ^6.0 "
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^8.0",
        "rector/rector": "^0.13.8",
        "symfony/error-handler": "^6.1",
        "symfony/process": "^5.4 || ^6.0",
        "symfony/thanks": "*"
    },
    "autoload": {
        "psr-4": {
            "spekulatius\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/spekulatius"
        },
        {
            "type": "buymeacoffee",
            "url": "https://www.buymeacoffee.com/spekulatius"
        }
    ],
    "config": {
        "allow-plugins": {
            "symfony/thanks": true
        }
    }
}
